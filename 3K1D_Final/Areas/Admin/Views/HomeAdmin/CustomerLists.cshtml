@model IEnumerable<_3K1D_Final.Models.KhachHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Customer Lists";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <p class="text-center">
        <a asp-action="Create" asp-controller="Customer" asp-area="Admin" class="btn btn-lg btn-primary mb-3">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                    <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
                    <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                    <th>@Html.DisplayNameFor(model => model.Sdt)</th>
                    <th>@Html.DisplayNameFor(model => model.Cccd)</th>
                    <th>@Html.DisplayNameFor(model => model.DiemTichLuy)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-white">
                        <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cccd)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiemTichLuy)</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Customer" asp-area="Admin" asp-route-id="@item.IdKhachHang" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-controller="Customer" asp-area="Admin" asp-route-id="@item.IdKhachHang" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-controller="Customer" asp-area="Admin" asp-route-id="@item.IdKhachHang" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
