@model IEnumerable<_3K1D_Final.Models.KhachHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">Danh Sách Khách hàng</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
            <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
            <th>@Html.DisplayNameFor(model => model.Sdt)</th>
            <th>@Html.DisplayNameFor(model => model.Cccd)</th>
            <th>@Html.DisplayNameFor(model => model.DiemTichLuy)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                <td>@Html.DisplayFor(modelItem => item.Cccd)</td>
                <td>@Html.DisplayFor(modelItem => item.DiemTichLuy)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.IdKhachHang">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdKhachHang">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdKhachHang">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
