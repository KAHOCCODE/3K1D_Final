

@{
    ViewData["Title"] = "Detail";
    Layout = null;

}
<style>
.movie-card {
    display: flex;
    justify-content: center; /* Căn giữa thẻ .movie-card */
    align-items: center;
    border: 1px solid #ccc;
    padding: 20px;
    padding-top:5%;
    padding-left:50px;
    padding-right:50px; 
}

.movie-card img {
    width: 200px;
    height: 300px;
    object-fit: cover;
    margin-right: 30px; /* Tạo khoảng cách giữa ảnh và thông tin phim */
     margin-left: 30px;
}

.movie-info {
    flex: 2; /* Cho phép phần này chiếm phần còn lại của không gian */
}

.movie-info p {
    margin: 5px 0;
}

</style>



<link rel="stylesheet" href="~/css/site.css">
<div>
<header>
        @Html.Partial("_Navbar")
</header>

@model _3K1D_Final.Models.Phim
@if (Model != null && Model.TenPhim != null)
    {
<div style="background: linear-gradient(to bottom, rgba(0,0,0,0.0), rgba(0,0,0,0.7));">
    <div class="movie-card" style="padding-left:20%; padding-right:15%;padding-top:5%">
                <img src="@Model.ApPhich" alt="Poster" />

            
        <div class="movie-info">
            <h2>@Model.TenPhim</h2>
            <p>@Model.ThoiLuong Phút | @Model.NamSx</p>
            <p>Quốc gia: @Model.QuocGiaSanXuat</p>
            <p>Thể loại: @Model.TenTheoLoai</p>
        </div>
    </div>
    </div>
    <div class="movie-description" style="padding-left:20%; padding-right:20%;">
        <p>Nội dung phim:</p>
        <p>@Model.MoTa</p>
    </div>


    }
    else
    {
        <p>No data available</p>
    }

